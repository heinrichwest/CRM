@page "/counter"

<MudText Typo="Typo.h4">Counter</MudText>

<MudText Typo="Typo.body1" Role="status">Current count: @currentCount</MudText>

<MudButton Color="Color.Primary" OnClick="IncrementCount">Click me</MudButton>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
